<% provide :title, t("login.title") %>
<h1><%= t "login.title" %></h1>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email, t("login.label.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("login.label.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.submit t("login.label.submit"), class: "btn btn-primary" %>
    <% end %>
    <p><%= link_to t("users.user_new"), signup_path %></p>
  </div>
</div>
