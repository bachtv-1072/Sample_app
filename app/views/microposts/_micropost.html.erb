<li id="micropost-<%= micropost.id %>">
  <span class="user">
    <%= link_to micropost.user_name, micropost.user %>
  </span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t "micropost.content_1" %> <%= time_ago_in_words micropost.created_at %> <%= t "micropost.content_2" %>
    <% if current_user? micropost.user %>
      <%= link_to t("micropost.delete"), micropost, method: :delete, data: { confirm: t("comfirm_login.comfirm") } %>
    <% end %>
  </span>
</li>
