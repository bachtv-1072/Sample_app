<% provide :title, t("mailer.reset_password.title") %>
<h1> <%= t "mailer.reset_password.title" %> </h1>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for @user, url: password_reset_path(params[:id]) do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= hidden_field_tag :email, @user.email %>
      <%= f.label :password, t("signup.label.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :password_confirmation, t("signup.label.password_comfirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <%= f.submit t("update.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
