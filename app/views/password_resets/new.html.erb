<% provide :title, t "mailer.reset_password.title" %>
<h1><%= t "mailer.reset_password.title" %> </h1>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for :password_reset, url: password_resets_path do |f| %>
      <%= f.label :email, t("login.label.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.submit t("login.label.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
