<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t "signup.message.messages_count"%>
      <%= pluralize @user.errors.count, t("signup.message.error") %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
       <li> <%= msg %> </li>
      <% end %>
    </ul>
  </div>
<% end %>
